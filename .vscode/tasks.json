{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$rgbdserror",
                "$rgbdslinkerror"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "make run",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "Build"
            ],
            "problemMatcher": [
                "$rgbdserror",
                "$rgbdslinkerror"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}